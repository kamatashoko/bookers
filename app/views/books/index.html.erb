<h1>Books</h1>
<%= form_with model: @book, local: true do |f| %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
         </tr>
      </thead>
    </table>

  <h2>New book</h2>

    <h4>title</h4>
    <%= f.text_field:title %>
  
    <h4>body</h4>
    <%= f.text_area:body %>
    <%= f.submit 'Create Book' %>
<% end %>